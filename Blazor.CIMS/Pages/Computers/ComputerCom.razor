<h3>@Computer.Brand | @Computer.Memory GB | @Computer.Ram GB</h3>
<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label>Brand:</label>
            <label>@Computer.Brand</label>
        </div>
        <div class="form-group">
            <label>Memory:</label>
            <label>@Computer.Memory GB</label>
        </div>
        <div class="form-group">
            <label>RAM:</label>
            <label>@Computer.Ram GB</label>
        </div>
        <div class="form-group">
            <label>Types:</label>
            <label>@Computer.DisplayTypes()</label>
        </div>
        <div class="form-group">
            <label>USB port:</label>
            <label>@Computer.UsbPort</label>
        </div>

        <div class="form-group">
            <label>RAM slots:</label>
            <label>@Computer.RamSlot</label>
        </div>

        <div class="form-group">
            <label>Quantiy:</label>
            <label>@Computer.Quantity</label>
        </div>

        <div class="form-group">
            <label>Price:</label>
            <label>@Computer.Price.CurrencyDisplay()</label>
        </div>

        <div class="form-group">
            <a class="btn btn-warning" href="EditComputer/@Computer.Id">
                Edit
            </a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Computer Computer { get; set; }
}
