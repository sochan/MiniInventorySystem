@page "/Computers"
@inject IComputerService MyService


<NavLink class="nav-link" href="AddBusiness">
    <span class="oi oi-plus" aria-hidden="true"></span> Add New
</NavLink>

<h4>Businesses</h4>
<div>
    @if (paginatedUsrs == null || !paginatedUsrs.Data.Any())
    {
        <table>
            <tr>
                <td>No data was returned.</td>
            </tr>
        </table>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ABN</th>
                    <th>Name</th>
                    <th>Trading Name</th>
                    <th>Address</th>
                    <th>Users</th>
                    <th>Employees</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in paginatedUsrs.Data)
                {
                    <tr>
                        <td>@obj.Abn</td>
                        <td><a href="BusinessDisplay/@obj.Id"> @obj.Name</a></td>
                        <td>@obj.TradingName</td>
                        <td>@obj.Address</td>

                        <td><a href="users/@obj.Id">Users</a></td>
                        <td><a href="employees/@obj.Id">Employees</a></td>
                        <td>
                            <a href="addUser/@obj.Id">Add Employee</a>
                        </td>
                        <td>
                            <a class="btn btn-warning" href="EditBusiness/@obj.Id/Businesses">
                                Edit
                            </a>
                            <a class="btn btn-danger" href="DeleteBusiness/@obj.Id">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div class="esh-pager">
    <div class="container">
        <article class="esh-pager-wrapper row">
            <nav>
                @if (pageIndex > 0)
                {
                    <a @onclick="Previous" class="esh-pager-item esh-pager-item--navigable">
                        Previous
                    </a>
                }
                <span class="esh-pager-item">
                    Showing @paginatedUsrs.ItemsPerPage of @paginatedUsrs.TotalItems products - Page @(paginatedUsrs.ActualPage + 1) - @paginatedUsrs.TotalPages
                </span>

                @if (pageIndex < paginatedUsrs.TotalPages - 1)
                {
                    <a @onclick="Next" class="esh-pager-item esh-pager-item--navigable">
                        Next
                    </a>
                }
            </nav>
        </article>
    </div>
</div>
@code {

    int pageSize = 5;
    int pageIndex = 0;
    PaginatedItemsViewModel<Computer> paginatedUsrs;

    protected override void OnParametersSet() => LoadPage();

    void Previous()
    {
        pageIndex--;
        LoadPage();
    }

    void Next()
    {
        pageIndex++;
        LoadPage();
    }

    void LoadPage()
    {
        paginatedUsrs = MyService.GetDataPaginated(pageSize, pageIndex);
    }
}
